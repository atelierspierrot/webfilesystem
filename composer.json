{
    "name": "atelierspierrot/webfilesystem",
    "type": "library",
    "description": "Extending the SPL file system to manage webserver based file system (such as assets).",
    "keywords": ["file", "directory", "webserver", "spl"],
    "homepage": "http://github.com/atelierspierrot/webfilesystem",
    "license": "Apache-2.0",
    "authors": [{
        "name": "Les Ateliers Pierrot & contributors",
        "email": "contact@ateliers-pierrot.fr",
        "homepage": "http://www.ateliers-pierrot.fr/"
    },{
        "name": "Pierre Cassat",
        "homepage": "http://e-piwi.fr/"
    }],
    "require": {
        "php": ">=5.3.0",
        "atelierspierrot/patterns": "1.*",
        "atelierspierrot/library": "1.*"
    },
    "require-dev": {
        "sami/sami": "@stable",
        "phpmd/phpmd" : "@stable",
        "fabpot/php-cs-fixer": "@stable"
    },
    "autoload": { "psr-4": { "WebFilesystem\\": "src/WebFilesystem/" } },
    "scripts": {
        "build-doc": "php vendor/bin/sami.php update .sami.php",
        "update-doc": "php vendor/bin/sami.php update .sami.php",
        "cs-fixer": "php vendor/bin/php-cs-fixer fix -v"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
